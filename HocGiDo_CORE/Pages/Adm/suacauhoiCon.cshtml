                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },

            success: function (response) {
                    if (response == 'Success') {
                        alert("Xóa hỏi thành công!");
                    $('#loadUpdate').load('/Adm/suacauhoiCon?bh=' + '@Model.MaBH' + '&questId=' + '@Model.MaCH');
                    }

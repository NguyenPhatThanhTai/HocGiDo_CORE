@page "{kh?}/{bh?}"
@model HocGiDo_CORE.Pages.hocModel
@{
}

@section header{
    <link rel="stylesheet" type="text/css" href="~/css/baihoc.css">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Resource/lib/codemirror.css">
    <link rel="stylesheet" href="~/Resource/lib/theme/dracula.css">
    <script src="~/Resource/lib/codemirror.js"></script>
    <script type="text/javascript" src="~/Resource/mode/xml/xml.js"></script>
    <script type="text/javascript" src="~/Resource/mode/css/css.js"></script>
    <script src="https://unpkg.com/typeit@8.0.3/dist/index.umd.js"></script>
    <script src="~/Resource/mode/javascript/javascript.js"></script>
}

<div class="main_content">
    <div class="left_content">
        <video class="videoPlayer" width="100%" controls muted="muted" autoplay>
            <source src="https://meet-hgd.herokuapp.com/video?url=@Model.lesson.Video" type="video/mp4" />
        </video>
        <div class="detail">
            <div class="tab">
                <button class="tablinks" onclick="openCity(event, 'cmt')"> <i class='bx bx-comment-detail'></i>Bình luận</i></button>
                <button class="tablinks" onclick="openCity(event, 'note')"><i class='bx bx-notepad'></i>Ghi chú</button>
                <button class="tablinks" onclick="openCity(event, 'subject')"><i class='bx bx-book-reader'></i>Bài học</button>
            </div>
            <div id="subject" class="tabcontent">
                <h3>@Model.lesson.GioiThieu</h3>
                @Model.lesson.LyThuyet
                <h3>Ví dụ:</h3>
                <div class="example">
                    <textarea id="code"></textarea>
                </div>
                <div class="tryIt">
                    <a href="/code/@ViewData["CourseId"]/@Model.lesson.MaBaiHoc">Thử code nào!</a>
                </div>
                <div id="exam_list"></div>
            </div>

            <div id="note" class="tabcontent">
                <h3>Ghi Chú</h3>
                <p>Bài này hiện tại chưa có ghi chú</p>
            </div>

            <div id="cmt" class="tabcontent">
                <h3>Bình Luận</h3>
                <p>Bài này chưa có bình luận nào, hãy là người bình luận đầu tiên nào</p>
            </div>
        </div>
    </div>
    <div class="right_content">
        <h3>Danh sách bài học</h3>
        <div class="ds">
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Làm được gì sau khóa học?</p>
                <i id="number" class='bx bx-lock-open'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">HTML, CSS là gì?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Làm quen với Dev tools?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Cài đặt môi trường?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Cấu trúc file HTML?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Comments trong HTML?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Thẻ HTML thông dụng?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Attribute trong HTML?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">Attribute trong HTML?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
            <div class="baihoc">
                <i class='bx bx-play-circle'></i>
                <p id="name">ID và Class?</p>
                <i id="number" class='bx bx-lock'></i>
            </div>
        </div>
    </div>
</div>
<div style="clear: both;"></div>
<script src="~/js/baihoc.js"></script>
<script>
    setCodeExample(@Html.Raw(Model.lesson.CodeMau));
</script>

